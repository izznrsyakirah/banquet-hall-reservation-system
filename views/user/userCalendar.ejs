        <div class="ui container" style="background-color: white;">
            <div class="ui grid">
                <div class="ui sixteen column">
                    <div id="calendar"></div>
                </div>
            </div>
        </div>

        <script>
            let eventArray = []
        </script>

        <% hallName.forEach(function(hall) { %>

            <% eventDetails.forEach(function(event) { %>

                <% if(hall.name == event.hallType) { %>

                    <script>

                        eventId = '<%= event._id %>'
                        eventhallType = '<%= event.hallType %>'
                        eventStatus = '<%= event.status %>'
                        eventDate = '<%= event.eventDate %>'
                        eventTime = '<%= event.eventTime %>'

                        eventString = { title: eventId + '\n' + eventhallType + ' ' + eventStatus, start: eventDate + 'T' + eventTime }
                        //console.log(eventString)

                        eventArray.push(eventString)
                        //console.log(eventArray)
                    </script>
                    
                <% } %>
            <% }) %>
        <% }) %>

